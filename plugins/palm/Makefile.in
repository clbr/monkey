_PATH   = $(patsubst $(monkey_root)/%, %, $(CURDIR))
CC	= @echo "  CC   $(_PATH)/$@"; $CC
CC_QUIET= @echo -n; $CC
CFLAGS	= $CFLAGS
LDFLAGS = $LDFLAGS
DEFS    = $DEFS
INCDIR  = ../../src/include
SOURCES = palm.c protocol.c cgi.c request.c
OBJECTS = palm.o protocol.o cgi.o request.o

all: monkey-palm.so

-include $(OBJECTS:.o=.d)

monkey-palm.so: $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -shared -o $@ $^ -lc

.c.o: $(SOURCES)
	$(CC) $(CFLAGS) $(DEFS) -I$(INCDIR) -fPIC -c $<
	$(CC_QUIET) -MM -MP $(CFLAGS) $(DEFS) -I$(INCDIR) $*.c -o $*.d > /dev/null &2>&1

clean:
	rm -rf *.[od] *.*~ *.*so*
